<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >


        <ImageView
            android:id="@+id/image_detail_list"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/title_detail_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/description_detail_list"
            app:layout_constraintTop_toTopOf="@+id/image_detail_list" />

        <TextView
            android:id="@+id/date_detail_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="right"
            android:text="2023-03-12"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/image_detail_list"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView

            android:id="@+id/description_detail_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_detail_list"
            app:layout_constraintTop_toBottomOf="@+id/title_detail_list"
            tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>