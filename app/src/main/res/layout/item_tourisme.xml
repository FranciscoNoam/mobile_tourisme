<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="Bold"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_detail_list"
        android:layout_width="130dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="27dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/title_detail_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre"
        android:textColor="@color/black"
        android:textSize="18sp"

        app:layout_constraintStart_toStartOf="@+id/description_detail_list"
        app:layout_constraintTop_toTopOf="@+id/image_detail_list" />

    <TextView
        android:id="@+id/date_detail_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="2023-03-12"
        android:textColor="@color/black"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_detail_list" />


    <TextView

        android:id="@+id/description_detail_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:text="iohioeezcezpojoeviooveviezjvopvjezovpezjvzeovjezopvjzeopezjezvjevzepovezj"
       android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_detail_list"
        app:layout_constraintTop_toBottomOf="@+id/title_detail_list"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:backgroundTint="@color/white"
        android:text="Voir plus"
        android:textColor="@color/purple_500"
        android:textSize="8sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/description_detail_list"
        app:layout_constraintTop_toBottomOf="@+id/description_detail_list" />


</androidx.constraintlayout.widget.ConstraintLayout>